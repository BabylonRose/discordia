import sys
import time


# Menu object class
class ChessMenu:
    """TODO - add description """
    def __init__(self, args_str):
        self.args = args_str

    def clear_prompt(self):
        for i in range(11):
            sys.stdout.write("\033c")
            sys.stdout.write("\033[F")  # cursor up one line || "\033[K" for clear to end of line
            sys.stdout.flush()

    def menu(self):
        while 1:
            time.sleep(1)
            self.clear_prompt()
            print(' |\CHESS-BOT/|\n'
                  ' 1. One Player \n'
                  ' 2. Two Player \n'
                  ' 3. Load Game  \n'
                  ' 4. Options    \n'
                  ' 5. Statistics \n'
                  ' 6. Quit       \n'
                  ' |/---------\|\n')
            choice = int(input('?: '))
            if choice == 1:
                print('Starting 1 player game against a.i. :')
            elif choice == 2:
                print('Starting 2 player game :')
            elif choice == 3:
                print('Choose game to load :')
            elif choice == 4:
                print('Game options :')
            elif choice == 5:
                print('Local leaderboards :')
            elif choice == 6:
                print('Quitting Chess Bot . . .')
                self.clear_prompt()
                return
            else:
                print('Invalid input')
        # #bottom of while loop


